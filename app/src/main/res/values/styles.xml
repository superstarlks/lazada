<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bgToolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/bgLogo</item> <!-- làm màu cam cho cái gạch dưới của tablayout-->
        <item name="android:textColorPrimary">@color/colorWhite</item> <!-- gán màu trắng cho layout được chọn -->
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>
    <style name="menuitemcolor" parent="AppTheme">
        <item name="android:textColorPrimary">@color/bgToolbar</item>
        <item name="drawerArrowStyle">@style/changecolordrawertoogle</item>
    </style>
    <style name="changecolordrawertoogle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorWhite</item>
    </style>

    <!-- chuyển chữ hoa thành thường dùng tabTextAppearance. -->
    <style name="capfale" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>
